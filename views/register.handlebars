{{!--

registration handelbars

--}}


    <h1>{{title}}</h1>
    {{#if error}}
        <p class="error">{{error}}</p>
    {{/if}}
    <form id="registration-form" action="/user/register" method="POST">
        <div>
            <label for="firstNameInput">First Name:</label>
            <input type="text" id="firstNameInput" name="firstNameInput" required>
        </div>
        <div>
            <label for="lastNameInput">Last Name:</label>
            <input type="text" id="lastNameInput" name="lastNameInput" required>
        </div>
        <div>
            <label for="emailAddressInput">Email Address:</label>
            <input type="email" id="emailAddressInput" name="emailAddressInput" required>
        </div>
        <div>
            <label for="passwordInput">Password:</label>
            <input type="password" id="passwordInput" name="passwordInput" required>
        </div>
        <div>
            <label for="confirmPasswordInput">Confirm Password:</label>
            <input type="password" id="confirmPasswordInput" name="confirmPasswordInput" required>
        </div>
        <div>
            <label for="roleInput">Role:</label>
            <select id="roleInput" name="roleInput" required>
                <option value="">Select a role</option>
                <option value="admin">Admin</option>
                <option value="user">User</option>
            </select>
        </div>
        <div>
            <button type="submit">Register</button>
        </div>
    </form>
    <p>
        <a href="/auth">Already have an account? Click here to log-in</a>
    </p>
