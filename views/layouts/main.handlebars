{{! When using res.render please add an argument for {title: ?} and {stylesheet: ?} so that we can dynamically use the code}}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>    {{! Using this for a dynamic title, please pass your titles when calling in routes}}
    <link rel="stylesheet" href="/css/main.css">
    {{! This will dynamically load a css file}}
    {{#if stylesheet}}
        <link rel="stylesheet" href="/css/{{stylesheet}}.css">
    {{/if}}
  </head>
  
  <body>
    {{> header}}
    {{{body}}}      {{! Remeber the 3 brackets for specific dynamic elements}}
    {{> footer}}   
    <script src="/js/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.js"
        integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
  </body>
</html>