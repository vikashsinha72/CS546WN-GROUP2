<body class="editEvent">
    <h1>Edit Your Event</h1>
    <main class="editEvent">
        <form class="editEvent" id="eventEdit-form" method="POST" action="/event/edit/{{eventId}}" >
            {{! This is to actually patch the form with the middleware in app.js}}
            <input type="hidden" name="_method" value="PATCH">

            <label for="eventName">
                Event Name:
                <input type="text" name="eventNameEdit" id="eventNameEdit">
            </label>
            <br>
            
            <label for="dateEdit">
                Date:
                <input type="date" name="dateEdit" id="dateEdit"
                min="2024-01-01">
            </label>
            <br>

            <label for="locationEdit">
                Location:
                <input type="text" name="locationEdit" id="locationEdit">
            </label>
            <br>

            <label for="descriptionEdit">
                Description:
                <input type="text" name="descriptionEdit" id="descriptionEdit">
            </label>
            <br>

            <label for="modeEdit">
                Event Mode:
                <select type="eventMode" name="modeEdit" id="modeEdit">
                   <option value="online">Online</option>
                   <option value="person">In-Person</option>
                </select>
            </label>
            <br>

            <label for="feeEdit">
                Registration Fee:
                <input type="text" name="feeEdit" id="feeEdit">
            </label>
            <br>

            <label for="permEdit">
                Who's Coming:
                <select type="permission" name="permEdit" id="permEdit">
                   <option value="public">Public</option>
                   <option value="private">Private</option>
                </select>
            </label>
            <br>

            <label for="categoryEdit">
                Cateogry:
                <input type="text" name="categoryEdit" id="categoryEdit">
            </label>
            <br>

            <label for="portEdit">
                Nearest Port:
                <input type="text" name="portEdit" id="portEdit">
            </label>
            <br>
            <button type="submit" name="action" value="save">Save For Later</button>
            <button type="submit" name="action" value="publish">Publish Event</button>
        </form>
        <form class="deleteEvent" id="eventDelete-form" method="POST" action="/event/edit/{{eventId}}">
            <input type="hidden" name="_method" value="DELETE">
            <button type="delete" name="delete" onclick="return confirm('Are you sure you want to delete this event?')" value="delete">DELETE EVENT</button>
        </form> 
    {{#if hasErrors}}
    <ul class="error-list">
        {{#each errors}}
                <li>
                    {{this}}
                </li>
            {{/each}}
        </ul>
    {{/if}}
    </main>
    {{! <a href="/profile">Back to your profile</a> once routes are worked out}}
    <script src="../public/js/events.js"></script>
</body>